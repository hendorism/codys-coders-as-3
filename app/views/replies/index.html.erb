<p id="notice"><%= notice %></p>

<h1>Replies</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.body %></td>
        <td><%= reply.user %></td>
        <td><%= reply.post %></td>
        <td><%= link_to 'Show', reply %></td>
        <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
        <td><%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<table id="footer-nav-table"><tr>
    <td><%= link_to 'Users', users_path %></td>
    <td><%= link_to 'Posts', posts_path %></td>
    <td><%= link_to 'Replies', replies_path %></td>
  </tr><tr>
    <td><%= link_to 'New User', new_user_path %></td>
    <td><%= link_to 'New Post', new_post_path %></td>
    <td><%= link_to 'New Reply', new_reply_path %></td>
  </tr>
</table>
